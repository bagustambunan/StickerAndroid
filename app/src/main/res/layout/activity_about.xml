<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/infoPageBackgroundColor"
    android:orientation="vertical"
    android:paddingTop="8dp"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_name"
            style="@style/TitleStyle"
            android:clickable="false"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/app_version"
            style="@style/SubTitleStyle"
            android:clickable="false"
            android:text="@string/app_version" />

        <TextView
            android:id="@+id/view_webpage"
            style="@style/InfoButtonStyle"
            android:drawableStart="@drawable/sticker_3rdparty_web"
            android:drawableLeft="@drawable/sticker_3rdparty_web"
            app:drawableTint="@color/colorAccent"
            android:text="@string/view_webpage" />

        <TextView
            android:id="@+id/send_email"
            style="@style/InfoButtonStyle"
            android:drawableStart="@drawable/sticker_3rdparty_email"
            android:drawableLeft="@drawable/sticker_3rdparty_email"
            app:drawableTint="@color/colorAccent"
            android:text="@string/send_email" />

        <TextView
            android:id="@+id/privacy_policy"
            style="@style/InfoButtonStyle"
            android:drawableStart="@drawable/sticker_3rdparty_web"
            android:drawableLeft="@drawable/sticker_3rdparty_web"
            app:drawableTint="@color/colorAccent"
            android:text="@string/privacy_policy" />

        <TextView
            android:id="@+id/footnote"
            style="@style/InfoButtonStyle"
            app:drawableTint="@color/colorAccent"
            android:visibility="gone"
            android:text="Made with ❤️ by @bagustambunan" />

    </LinearLayout>
</LinearLayout>
